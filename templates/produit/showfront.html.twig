{% extends 'frontend/basefront.html.twig' %}

{% block title %}Produit{% endblock %}

{% block content %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ produit.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ produit.Nom }}</td>
        </tr>
        <tr>
            <th>Prix</th>
            <td>{{ produit.Prix }}</td>
        </tr>
        <tr>
            <th>DateAjout</th>
            <td>{{ produit.DateAjout ? produit.DateAjout|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>Stock</th>
            <td>{{ produit.Stock }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ produit.Description }}</td>
        </tr>
        <tr>
            <th>Type</th>
            <td>{{ produit.Type ? 'New' : 'Used' }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td><img src="{{vich_uploader_asset(produit,'imageFile')}}" height="300" width="300" alt="Img"></td>
        </tr>
        </tbody>
    </table>

    <a style="max-width: 300px; margin-left: auto; margin-right: auto;" class="btn btn-block btn-outline-info" href="{{ path('produit_index') }}">back to list</a>

{% endblock %}
