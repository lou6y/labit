{% extends 'frontend/basefront.html.twig' %}

{% block title %}Review{% endblock %}

{% block content %}

    <section class="section-md bg-default decor-text" >
        <div class="container">
            <h4 class="heading-decorated">Review</h4>

            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ review.id }}</td>
                </tr>
                <tr>
                    <th>Daterev</th>
                    <td>{{ review.Daterev ? review.Daterev|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Text</th>
                    <td>{{ review.Text }}</td>
                </tr>
                </tbody>
            </table>

            <a style="max-width: 300px; margin-left: auto; margin-right: auto;" class="btn btn-block btn-outline-info" href="{{ path('review_index') }}">Back to list</a>

            <a style="max-width: 300px; margin-left: auto; margin-right: auto;" class="btn btn-block btn-outline-info" href="{{ path('review_edit', {'id': review.id}) }}">&nbsp; &nbsp;Edit</a>


            {{ include('review/_delete_form.html.twig') }}
        </div>
    </section>
{% endblock %}
