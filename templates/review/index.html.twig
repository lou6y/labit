{% extends 'frontend/basefront.html.twig' %}

{% block title %}Reviews{% endblock %}

{% block content %}
    <main>
        <section class="section-md bg-default decor-text" data-content="Review">
            <div class="container">
                <div class="row row-50">
                    <div class="col-md-5 col-lg-4">
                        <h4 class="heading-decorated">Contact Details</h4>
                        <ul class="list-sm contact-info">
                            <li>
                                <dl class="list-terms-inline">
                                    <dt>Address</dt>
                                    <dd>Rue des Catacombes, Cité Ezzahra (Souk Lahad), Sousse 4002</dd>
                                </dl>
                            </li>
                            <li>
                                <dl class="list-terms-inline">
                                    <dt>Phones</dt>
                                    <dd>
                                        <ul class="list-semicolon">
                                            <li><a href="tel:#">(216) 50 234 911</a></li>
                                        </ul>
                                    </dd>
                                </dl>
                            </li>
                            <li>
                                <dl class="list-terms-inline">
                                    <dt>Opening Hours</dt>
                                    <dd>Mn-Fr: 8:30 am-6:30 pm</dd>
                                </dl>
                            </li>
                            <li>
                                <ul class="list-inline-sm">
                                    <li><a class="icon-sm fa-facebook icon" href="#"></a></li>
                                    <li><a class="icon-sm fa-twitter icon" href="#"></a></li>
                                    <li><a class="icon-sm fa-google-plus icon" href="#"></a></li>
                                    <li><a class="icon-sm fa-vimeo icon" href="#"></a></li>
                                    <li><a class="icon-sm fa-youtube icon" href="#"></a></li>
                                    <li><a class="icon-sm fa-pinterest-p icon" href="#"></a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-7 col-lg-8">
                        <div class="container">

                            <h4 class="heading-decorated">My Reviews ( {{ app.user.reviews | length }} )</h4>

                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Daterev</th>
                                    <th>Text</th>
                                    <th>Actions</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for review in reviews %}
                                    <tr>
                                        <td>{{ review.Daterev ? review.Daterev|date('Y-m-d') : '' }}</td>
                                        <td>{{ review.Text }}</td>
                                        <td><a href="{{ path('review_showfront', {'id': review.id}) }}">Show</a></td>
                                        <td> <a href="{{ path('review_edit', {'id': review.id}) }}">Edit</a></td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="4">Aucun review trouvé</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                            <a class="button button-primary" href="{{ path('review_new') }}">Create new</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </main>
{% endblock %}
