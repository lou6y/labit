{% extends 'backend/baseback.html.twig' %}

{% block title %}Service{% endblock %}

{% block content %}
    <h1>Service</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ service.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ service.Nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ service.Description }}</td>
            </tr>
            <tr>
                <th>Description Complete</th>
                <td>{{ service.DescriptionLong }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{vich_uploader_asset(service,'imageFile')}}" height="300" width="300" alt="Img"></td>
            </tr>
        </tbody>
    </table>

    <a style="max-width: 300px; margin-left: auto; margin-right: auto;" class="btn btn-block btn-outline-info" href="{{ path('service_back') }}">back to list</a>

    <a style="max-width: 300px; margin-left: auto; margin-right: auto;" class="btn btn-block btn-outline-info" href="{{ path('service_edit', {'id': service.id}) }}">edit</a>

    {{ include('service/_delete_form.html.twig') }}
{% endblock %}
