{% extends 'backend/baseback.html.twig' %}

{% block title %}Category{% endblock %}

{% block content %}
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.Name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{vich_uploader_asset(category,'imageFile')}}" height="300" width="300" alt="Img"></td>
            </tr>
            <tr>
                <th>Produits</th>
                <td> {% for produit in category.produits%}
                <a> {{ produit.Nom }} </a>
                {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a style="max-width: 300px; margin-left: auto; margin-right: auto;" class="btn btn-block btn-outline-info" href="{{ path('category_back') }}">back to list</a>

    <a style="max-width: 300px; margin-left: auto; margin-right: auto;" class="btn btn-block btn-outline-info" href="{{ path('category_edit', {'id': category.id}) }}">edit</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
