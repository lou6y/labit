{% extends 'frontend/basefront.html.twig' %}

{% block title %}Commande{% endblock %}

{% block content %}
    <h1>Commande</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ commande.id }}</td>
        </tr>
        <tr>
            <th>DateCmd</th>
            <td>{{ commande.DateCmd ? commande.DateCmd|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>PrixTotale</th>
            <td>{{ commande.PrixTotale }}</td>
        </tr>
        <tr>
            <th>Observation</th>
            <td>{{ commande.Observation }}</td>
        </tr>
        <tr>
            <th>Liste de produits</th>
            {% for produit in commande.produitid%}
            <td>{{ produit.nom }}</td>
            {% else %}
        <tr>
            <td colspan="8">no records found</td>
        </tr>
        {% endfor %}

        </tr>
        </tbody>
    </table>

    <a style="max-width: 300px; margin-left: auto; margin-right: auto;" class="btn btn-block btn-outline-info" href="{{ path('commande_index') }}">back to list</a>

    <a style="max-width: 300px; margin-left: auto; margin-right: auto;" class="btn btn-block btn-outline-info" href="{{ path('commande_edit', {'id': commande.id}) }}">edit</a>

    {{ include('commande/_delete_form.html.twig') }}
{% endblock %}
